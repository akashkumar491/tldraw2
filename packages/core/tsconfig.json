{
  "extends": "../../tsconfig.base.json",
  "exclude": ["node_modules", "dist", "docs"],
  "compilerOptions": {
    "outDir": "./dist/types",
    "rootDir": "src",
    "baseUrl": ".",
    "paths": {
      "~*": ["./src/*"],
      "@tldraw/vec": ["../vec/src"],
      "@tldraw/intersect": ["../intersect/src"]
    }
  },
  "references": [{ "path": "../vec" }, { "path": "../intersect" }],
  "typedocOptions": {
    "entryPoints": ["src/index.ts"],
    "out": "docs"
  }
}
