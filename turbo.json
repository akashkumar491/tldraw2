{
  "$schema": "https://turborepo.org/schema.json",
  "baseBranch": "origin/main",
  "pipeline": {
    "start": {
      "cache": false
    },
    "start:www": {
      "cache": false
    },
    "start:vscode": {
      "cache": false
    },
    "dev": {
      "cache": false
    },
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**"]
    },
    "@tldraw/www#build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**"]
    },
    "tldraw-vscode#build": {
      "dependsOn": ["@tldraw/vscode-editor#build"],
      "outputs": ["dist/**", "editor/**", "temp/**"]
    },
    "test": {
      "outputs": []
    },
    "test:ci": {
      "outputs": ["coverage/**"]
    },
    "test:watch": {
      "outputs": [],
      "inputs": ["src/**/*.tsx", "src/**/*.ts", "src/**/*.json"],
      "cache": false
    },
    "lint": {
      "outputs": []
    },
    "clean": {
      "cache": false
    },
    "deploy": {
      "dependsOn": ["build", "test"],
      "outputs": ["dist/**", ".next/**"]
    }
  }
}
